<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/current_order_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxWidth="100dp"
                android:text="TextView"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="24sp"
                android:layout_weight="7"/>

            <ImageButton
                android:id="@+id/current_order_item_decrement"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:drawable/presence_busy" />

            <TextView
                android:id="@+id/current_order_item_qty"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:foregroundGravity="center_vertical|center_horizontal"
                android:gravity="center_horizontal|center_vertical"
                android:text="1"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/current_order_item_increment"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:background="@android:drawable/ic_menu_add"
                android:layout_weight="1"/>
        </LinearLayout>

        <EditText
            android:id="@+id/current_order_item_note"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:capitalize="sentences"
            android:cursorVisible="true"
            android:editable="true"
            android:singleLine="true"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>